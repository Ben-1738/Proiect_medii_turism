<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proiect_medii.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Proiect_medii"
    Shell.FlyoutBehavior="Disabled"
    Title="Proiect_medii">

    <TabBar>

        <ShellContent
            Title="Agents"
            Icon="agents.png"
            ContentTemplate="{DataTemplate local:AgentPage}"
            Route="AgentPage" />

        <ShellContent
            Title="Clients"
            Icon="clients.png"
            ContentTemplate="{DataTemplate local:ClientPage}"
            Route="ClientPage" />

        <ShellContent
            Title="Packages"
            Icon="packages.png"
            ContentTemplate="{DataTemplate local:TourPackagePage}"
            Route="TourPackagePage" />

        <ShellContent
            Title="Bookings"
            Icon="bookings.png"
            ContentTemplate="{DataTemplate local:BookingPage}"
            Route="BookingPage" />

    </TabBar>

</Shell>
