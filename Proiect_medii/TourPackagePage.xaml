<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_medii.TourPackagePage"
             Title="Pachete turistice">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <Entry x:Name="NameEntry" Placeholder="Nume pachet" />
            <Entry x:Name="DestinationEntry" Placeholder="Destinatie" />
            <Entry x:Name="PriceEntry" Placeholder="Pret" Keyboard="Numeric" />

            <Label Text="Data plecare" />
            <DatePicker x:Name="LeavingDatePicker" />

            <Label Text="Data intoarcere" />
            <DatePicker x:Name="ReturnDatePicker" />

            <Button Text="Adauga" Clicked="OnAddClicked" />
            <Button Text="Modifica" Clicked="OnUpdateClicked" />
            <Button Text="Sterge" TextColor="Red" Clicked="OnDeleteClicked" />

            <CollectionView x:Name="PackagesCollection"
                            SelectionMode="Single"
                            SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Destination}" />
                            <Label Text="{Binding Price, StringFormat='Pret: {0} lei'}" />
                            <Label Text="{Binding LeavingDate, StringFormat='Plecare: {0:dd.MM.yyyy}'}" />
                            <Label Text="{Binding ReturnDate, StringFormat='Intoarcere: {0:dd.MM.yyyy}'}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
