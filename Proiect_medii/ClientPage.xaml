<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_medii.ClientPage"
             Title="Clienti">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <Entry x:Name="LastNameEntry" Placeholder="Nume" />
            <Entry x:Name="FirstNameEntry" Placeholder="Prenume" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />

            <Button Text="Adauga" Clicked="OnAddClicked" />
            <Button Text="Modifica" Clicked="OnUpdateClicked" />
            <Button Text="Sterge" TextColor="Red" Clicked="OnDeleteClicked" />

            <CollectionView x:Name="ClientsCollection"
                            SelectionMode="Single"
                            SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10">
                            <Label Text="{Binding LastName}" FontAttributes="Bold" />
                            <Label Text="{Binding FirstName}" />
                            <Label Text="{Binding Email}" FontSize="12" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
